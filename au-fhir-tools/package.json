{
  "name": "mcp-au-fhir-tools",
  "version": "0.1.0",
  "description": "Tools for adding Australian FHIR capabilities to LLMs.",
  "type": "module",
  "bin": {
    "mcp-au-fhir-tools": "dist/stdio.js"
  },
  "scripts": {
    "build": "bunx tsc",
    "start-stdio": "bun src/stdio.ts",
    "start-sse": "bun src/sse.ts",
    "inspect-stdio": "npx @modelcontextprotocol/inspector bun src/stdio.ts",
    "inspect-sse": "npx @modelcontextprotocol/inspector bun src/sse.ts",
    "test": "bunx jest",
    "lint": "bunx eslint . --ext .ts,.js",
    "lint:fix": "bunx eslint . --ext .ts,.js --fix",
    "format": "bunx prettier --write \"**/*.{ts,js,json}\"",
    "format:check": "bunx prettier -l \"**/*.{ts,js,json}\""
  },
  "keywords": [],
  "author": "John Grimes",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/fhir": "^0.0.41",
    "express": "^4.21.2",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.14",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.3.1",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist"
  ]
}
